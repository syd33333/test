
            replaceTagValue(doc, "CreDt", "urn:iso:std:iso:20022:tech:xsd:head.001.001.03", currentTime);

private static void replaceTagValue(Document doc, String tagName, String namespace, String newValue) {
        NodeList nodes = doc.getElementsByTagNameNS(namespace, tagName);
        if (nodes.getLength() > 0) {
            Element element = (Element) nodes.item(0); // Update the first occurrence
            element.setTextContent(newValue);
        } else {
            throw new IllegalStateException("No <" + tagName + "> element found in namespace: " + namespace);
        }
    }
}
