# Set default Java version to JDK 7
export JAVA_HOME=$(/usr/libexec/java_home -v 1.7)
export PATH=$JAVA_HOME/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin

# Java version switching aliases
alias java17='export JAVA_HOME=$(/usr/libexec/java_home -v 17); export PATH=$JAVA_HOME/bin:$PATH; java -version'
alias java7='export JAVA_HOME=$(/usr/libexec/java_home -v 1.7); export PATH=$JAVA_HOME/bin:$PATH; java -version'
